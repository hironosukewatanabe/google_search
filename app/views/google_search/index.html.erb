<div class="container">
  <div>
    <h1 class="my-5 mr-md-auto font-weight-normal">Google検索</h2>
  </div>
  <%= form_with url: search_google_search_index_url, :class => "row mb-5", method: :GET do |form| %>
	  <div class="col-auto">
      <%= form.text_field :search_text, :class => "form-control" %>
		</div>
	  <div class="col-auto">
      <%= form.submit '検索', :class => "btn btn-primary" %>
		</div>
  <% end %>
  
  <dl>
    <% @search_results.present? && @search_results.each do |results| %>
  	  <dt>
  			<%= link_to results.title, results.link %>
  		</dt>
  		<dd>
  		  <%= results.snippet %>
  		</dd>
  	<% end %>
  </dl>
</div>